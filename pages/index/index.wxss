/**index.wxss**/
page{
  height: 100%;
  overflow: hidden;
}
.container{
  display: block;
  width: 100%;
  height: 100%;
  background-image: url("https://pic.gaodun.com/cfa_xcx/images/home-bj.jpg");
  background-size: 100% 100%;
}

.home-title{
  display: block;
  margin: 135rpx auto 0;
  width: 574rpx;
  height: 126rpx;
}
.home-title image{
  width: 100%;
  height: 100%;
}
.home-people{
  display: block;
  margin: 33rpx auto 0;
  width: 413rpx;
  height: 492rpx;
}
.home-people image{
  width: 100%;
  height: 100%;
}

.btn-group{
  margin-top: 40rpx;
  width: 100%;
  height: 273rpx;
  display: flex;
  flex-direction: column;
  justify-content:space-around;
  
}
.btn-group .button{
  display: block;
  width: 389rpx;
  height: 129rpx;
  margin: 0 auto;
  background-size: 100% 100%;
}
.btn-group .button.opacity{
  opacity: 0.6;
}
.btn-group .button-start{
  background-image: url("https://pic.gaodun.com/cfa_xcx/images/test-start-btn.png");
}

.btn-group .button-history{
  background-image: url("https://pic.gaodun.com/cfa_xcx/images/history-btn.png");
}

.mask{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 99;
}

.getUserInfo{
  position: fixed;
  z-index: 99999;
  padding: 0 20rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%)
}













