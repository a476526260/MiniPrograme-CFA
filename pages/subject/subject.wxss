/* pages/subject/subject.wxss */
page{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.container{
  display: block;
  width: 100%;
  height: 100%;
  background: url('https://pic.gaodun.com/cfa_xcx/images/subject-bj.jpg');
  background-size: 100% 100%;
}
.subject{
  position: relative;
  width: 656rpx;
  height: 100%;
  margin: 0 auto;
  padding: 0 28rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.subjectText{
  height: 58rpx;
  margin-top: 92rpx;
}
.subjectText text{
  display: inline-block;
  position: relative;
  z-index: 1;
  font-size: 36rpx;
  height: 58rpx;
  line-height: 58rpx;
  white-space: nowrap
}
.subjectText text::after{
  content: "";
  display: block;
  width: 100%;
  height: 18rpx;
  position: absolute;
  top: 40rpx;
  z-index: -1;
  background: #ffe2b9
}
.answerBox{
  margin-top: 40rpx;
}
.answerBox .answer{
  position: relative;
  margin: 32rpx 0;
}
.answerBox .answerPicture{
  width: 478rpx;
  height: 375rpx;
  margin: 0 auto;
  background-image: url("https://pic.gaodun.com/cfa_xcx/images/border.png");
  background-size: 100% 100%;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}
.answerBox .answerPicture image{
  width: 312rpx;
}
.answerBox .answerText{
  margin-top: 14rpx;
  text-align: center;
}
.answerBox .answerText text.size1{
  font-size: 36rpx;
  line-height: 58rpx
}
.answerBox .answerText text.size2{
  font-size: 26rpx;
  line-height: 36rpx
}
.answerBox .check{
  position: absolute;
  width: 105rpx;
  height: 95rpx;
  right: 0;
  bottom: 20rpx;
  background: url("https://pic.gaodun.com/cfa_xcx/images/check.png");
  background-size: 100% 100%;
}
.pageIndex{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  text-align: center;
}
.pageIndex text{
  font-size: 24rpx;
  line-height: 58rpx;
  color: #999999;
}



















































